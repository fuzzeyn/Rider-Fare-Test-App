<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike.riderfare.ConfirmSelectionActivity">

    <TextView
        android:background="@color/colorGray"
        android:text="Confirm Selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:text="+"
        android:id="@+id/addButton"
        android:layout_marginEnd="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_amount"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/addButton"
        android:layout_alignStart="@+id/addButton" />

    <Button
        android:text="Purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/RiderTextView"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/textView_amount" />

    <Button
        android:text="-"
        android:id="@+id/subtractButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleX=".5"
        android:scaleY=".5"
        android:layout_below="@+id/textView_amount"
        android:layout_alignStart="@+id/addButton" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FareTextView"
        android:layout_above="@+id/RiderTextView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
